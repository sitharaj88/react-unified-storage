{
  "name": "@sitharaj08/react-unified-storage",
  "version": "1.0.1",
  "description": "One unified, secure, and modern storage solution for React.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run --run || echo 'No tests found'",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 10",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sitharaj08/react-unified-storage-core": "workspace:*",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/node": "^20.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "keywords": [
    "react",
    "storage",
    "localStorage",
    "indexeddb",
    "sessionStorage",
    "encryption",
    "compression",
    "typescript",
    "hooks",
    "cross-tab",
    "synchronization",
    "react-hooks"
  ],
  "author": "Sitharaj Seenivasan <sitharaj88@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitharaj88/react-unified-storage.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/sitharaj88/react-unified-storage/issues"
  },
  "homepage": "https://github.com/sitharaj88/react-unified-storage#readme"
}