{
  "name": "@sitharaj08/react-unified-storage-core",
  "version": "1.0.1",
  "description": "Core storage library for react-unified-storage",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts --max-warnings 10",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fflate": "^0.8.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "fake-indexeddb": "^4.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "keywords": [
    "storage",
    "localStorage",
    "indexeddb",
    "sessionStorage",
    "encryption",
    "compression",
    "typescript",
    "react",
    "cross-tab",
    "synchronization"
  ],
  "author": "Sitharaj Seenivasan <sitharaj88@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitharaj88/react-unified-storage.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/sitharaj88/react-unified-storage/issues"
  },
  "homepage": "https://github.com/sitharaj88/react-unified-storage#readme"
}